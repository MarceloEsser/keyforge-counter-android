<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarceloEsserPortfolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="RowLineStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/ripple_lines</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="RowLineWayStyleText">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="IBActionStyle">
        <item name="android:background">@drawable/background_ib_action</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

</resources>